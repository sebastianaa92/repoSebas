import random

word_list = ["piki","mun","tuki"]

#Ejercicio 1 elegir una palabra de la lista word_list

coso = random.choice(word_list)

print(list(coso))

#Preguntar al usuario

guess = input("Adivina la letra: ").lower()
print(guess)

#coso 3

palabra = list(coso)

for i in range(0,len(palabra)):
    #print(i)
    if guess == palabra[i]:
        print("right")
        i += 1
    else: print("wrong")
    i += 1
