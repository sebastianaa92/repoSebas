import json
import xmltodict

try:
    with open ("/home/sebastian/Downloads/Biblioteca_Reporte.xml") as xml_file:
        data_dict = xmltodict.parse(xml_file.read())
        print("XML ha sido leído y convertido a diccionario exitosamente.")
    
        json_data = json.dumps(data_dict, indent=4)  # Añade indentación para que sea más legible
        print("Datos convertidos a JSON exitosamente.")

        salida = "/home/sebastian/Downloads/Biblioteca.json"
        
        with open(salida, "w") as json_file:
            json_file.write(json_data)
            print("Archivo JSON ha sido creado exitosamente.")
except Exception as e:
    print(f"Error encontrado: {e}")
